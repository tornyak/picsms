<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tornyak.picsms"
    android:versionCode="1"
    android:versionName="1.0" android:installLocation="auto">

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="15"/>
    
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>

    <application
        android:icon="@drawable/ic_picsms"
        android:label="@string/app_name" android:debuggable="false" android:logo="@drawable/ic_picsms" android:theme="@style/AppTheme">
        <activity
            android:name=".PicsmsActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PhoneBookActivity" android:configChanges="orientation|keyboardHidden"></activity>
        
        <activity android:name=".EditContactsActivity">
            <intent-filter>
                <action android:name="com.tornyak.picsms.ACTION_EDIT_CONTACT_LIST"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        
        <activity android:name=".PickContactActivity">
		</activity>
		
		<activity android:name=".PickNumberActivity">
		</activity>
		
		<activity android:name=".PicsmsPreferences">
		</activity>
		
    </application>

</manifest>